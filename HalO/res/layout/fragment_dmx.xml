<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/blackout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="59dp"
        android:text="Blackout" />

    <Button
        android:id="@+id/lasers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/blackout"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:text="Lasers!" />

    <Button
        android:id="@+id/strobeFlash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lasers"
        android:text="Strobe" />

	    <SeekBar
	        android:id="@+id/red"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/strobeFlash"
	        android:layout_marginTop="15dp"
	        android:max="255"
	        android:progress="0"
	        android:layout_weight="1" />

	    <SeekBar
	        android:id="@+id/strobeSpeed"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/red"
	        android:layout_marginTop="16dp"
	        android:layout_toRightOf="@+id/strobeHold"
	        android:max="255"
	        android:progress="255"
	        android:rotation="0" />

	    <Button
	        android:id="@+id/strobeHold"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignTop="@+id/strobeSpeed"
	        android:text="Strobe hold" />

	    <Button
	        android:id="@+id/smoke"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/strobeHold"
	        android:text="Sm0k3" />

	    <Switch
	        android:id="@+id/dart"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/smoke"
	        android:text="DART mode" />

	    <Button
	        android:id="@+id/beerPong"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/smoke"
	        android:text="Beer pong" />

</RelativeLayout>